<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_10"
    android:background="#fff"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/img_cover"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200"/>
    <TextView
        android:id="@+id/tv_topic_name"
        android:text="商品"
        android:textSize="@dimen/dp_18"
        app:layout_constraintTop_toBottomOf="@id/img_cover"
        app:layout_constraintLeft_toLeftOf="@id/img_cover"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_topic_price"
        android:text="￥99.00元起"
        android:textColor="#ff0000"
        android:textSize="@dimen/dp_18"
        app:layout_constraintTop_toTopOf="@id/tv_topic_name"
        app:layout_constraintLeft_toRightOf="@id/tv_topic_name"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_topic_content"
        android:text="毛毛虫球鞋"
        android:maxLines="1"
        app:layout_constraintTop_toBottomOf="@id/tv_topic_name"
        app:layout_constraintLeft_toLeftOf="@id/tv_topic_name"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>