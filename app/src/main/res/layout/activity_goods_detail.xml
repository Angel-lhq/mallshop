<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <include layout="@layout/layout_toolbar" android:id="@+id/toolbar"/>
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScroll"
        android:layout_above="@+id/bottom"
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.youth.banner.Banner
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_300"
                app:layout_constraintTop_toTopOf="parent"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:background="#DAD9D9">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="●30无忧退货"
                    android:textSize="@dimen/sp_14"
                    android:layout_gravity="left|center"
                    android:layout_marginLeft="@dimen/dp_10"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="●48小时快速退款"
                    android:textSize="@dimen/sp_14"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_10"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="●88元免邮费"
                    android:textSize="@dimen/sp_14"
                    android:layout_gravity="right|center"
                    android:layout_marginRight="@dimen/dp_10"/>
            </FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_180"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txt_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="空调被"
                    android:textSize="@dimen/sp_20"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:id="@+id/txt_des"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="空调被"
                    android:textSize="@dimen/sp_14"
                    android:layout_gravity="center"/>
                <TextView
                    android:id="@+id/txt_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥699"
                    android:textSize="@dimen/sp_18"
                    android:layout_marginTop="@dimen/dp_30"
                    android:layout_gravity="center"
                    android:textColor="#ff0000"/>
                <TextView
                    android:id="@+id/txt_product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="制造商 "
                    android:textSize="@dimen/sp_16"
                    android:gravity="center"
                    android:drawableRight="@drawable/ic_into"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_gravity="center"
                    android:textColor="#FFC107"
                    android:background="@drawable/shape_txt_border_yellow"
                    android:padding="@dimen/dp_10"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="#E4E4E4"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_20"/>
            <FrameLayout
                android:id="@+id/layout_norms"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请选择规格数量"
                    android:textSize="@dimen/sp_14"
                    android:layout_gravity="left|center"
                    android:layout_marginLeft="@dimen/dp_10"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=">"
                    android:textSize="@dimen/sp_14"
                    android:layout_gravity="right|center"
                    android:layout_marginRight="@dimen/dp_10"/>
            </FrameLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_20"
                android:background="#E4E4E4"
                android:layout_marginTop="@dimen/dp_20"/>

            <RelativeLayout
                android:id="@+id/rel_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <FrameLayout
                    android:id="@+id/layout_comment"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_60">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="评价(30)"
                        android:textSize="@dimen/sp_18"
                        android:layout_gravity="left|center"
                        android:layout_marginLeft="@dimen/dp_10"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="查看全部 >"
                        android:textSize="@dimen/sp_14"
                        android:layout_gravity="right|center"
                        android:layout_marginRight="@dimen/dp_10"/>
                </FrameLayout>
                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="#E4E4E4"
                    android:layout_below="@+id/layout_comment"
                    android:layout_marginTop="@dimen/dp_10"/>
                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2020.9.15"
                    android:layout_margin="@dimen/dp_10"
                    android:textSize="@dimen/sp_14"
                    android:layout_below="@+id/view"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_10"/>
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="null"
                    android:layout_below="@+id/view"
                    android:layout_margin="@dimen/dp_10"
                    android:textSize="@dimen/sp_16"
                    android:layout_marginLeft="@dimen/dp_10"/>

                <TextView
                    android:id="@+id/tv_comment"
                    android:layout_below="@id/tv_name"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginVertical="@dimen/dp_10"
                    android:text="是可见的卡手机打开拉萨的理解"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:id="@+id/layout_imgs"
                    android:layout_below="@id/tv_comment"
                    android:paddingLeft="@dimen/sp_20"
                    android:paddingBottom="@dimen/dp_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/layout_parameter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:padding="@dimen/dp_10"
                android:orientation="vertical">
                <TextView
                    android:text="商品参数"
                    android:textSize="@dimen/sp_25"
                    android:layout_margin="@dimen/dp_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <WebView
                android:id="@+id/webView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:layout_gravity="center"
                android:text="——  常见问题  ——"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcl_problem"
                android:background="@color/color_white"
                android:nestedScrollingEnabled="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/color_white"
                android:text="——  大家都在看  ——"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcl_people"
                android:background="@color/color_white"
                android:nestedScrollingEnabled="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="#ffffff">
        <RelativeLayout
            android:id="@+id/layout_collect"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_collect"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layout_cart"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/img_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_cart"
                android:layout_centerInParent="true"/>
            <TextView
                android:id="@+id/tv_count"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:textSize="@dimen/sp_12"
                android:textColor="#ffffff"
                android:layout_alignRight="@id/img_cart"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginLeft="@dimen/dp_20"
                android:text="0"
                android:gravity="center"
                android:background="@drawable/shape_txt_round_red"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/txt_buy"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignRight="@id/img_cart"
            android:textSize="@dimen/sp_12"
            android:textColor="#000000"
            android:text="立即购买"
            android:gravity="center"
            android:background="@drawable/shape_txt_border_black"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_add_cart"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignRight="@id/img_cart"
            android:textSize="@dimen/sp_12"
            android:textColor="#ffffff"
            android:text="加入购物车"
            android:gravity="center"
            android:background="#ff0000"
            android:layout_weight="1"/>
    </LinearLayout>
</RelativeLayout>