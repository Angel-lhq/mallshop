<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff">
    <ImageView
        android:id="@+id/img_good"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_100"
        android:src="@mipmap/ic_launcher"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"/>
    <TextView
        android:id="@+id/tv_price"
        android:text="价格：￥59"
        app:layout_constraintTop_toTopOf="@id/img_good"
        app:layout_constraintLeft_toRightOf="@+id/img_good"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_specifications"
        android:text="已选择：请选择规格数量"
        app:layout_constraintTop_toBottomOf="@id/tv_price"
        app:layout_constraintLeft_toRightOf="@+id/img_good"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txt_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_close"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"/>

    <TextView
        android:id="@+id/txt_count"
        android:text="数量"
        android:textSize="@dimen/sp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        app:layout_constraintTop_toBottomOf="@id/img_good"
        app:layout_constraintLeft_toLeftOf="@id/layout_cart_pop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <com.example.mallshop.common.CartCustomView
        android:id="@+id/layout_cart_pop"
        android:layout_margin="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txt_count"
        app:layout_constraintLeft_toLeftOf="parent">
        <include layout="@layout/layout_custom"/>
    </com.example.mallshop.common.CartCustomView>
    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/layout_cart_pop"
        android:background="#ffffff">
        <RelativeLayout
            android:id="@+id/layout_collect"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_collect"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layout_cart"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/img_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_cart"
                android:layout_centerInParent="true"/>
            <TextView
                android:id="@+id/tv_count"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:textSize="@dimen/sp_12"
                android:textColor="#ffffff"
                android:layout_alignRight="@id/img_cart"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginLeft="@dimen/dp_20"
                android:text="0"
                android:gravity="center"
                android:background="@drawable/shape_txt_round_red"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/txt_buy"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignRight="@id/img_cart"
            android:textSize="@dimen/sp_12"
            android:textColor="#000000"
            android:text="立即购买"
            android:gravity="center"
            android:background="@drawable/shape_txt_border_black"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_add_cart"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignRight="@id/img_cart"
            android:textSize="@dimen/sp_12"
            android:textColor="#ffffff"
            android:text="加入购物车"
            android:gravity="center"
            android:background="#ff0000"
            android:layout_weight="1"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>