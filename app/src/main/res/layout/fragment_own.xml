<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/btn_quit"
        android:text="退出登录"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/color_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_head"
        android:background="#AB000000"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200">

        <TextView
            android:text="我的"
            android:textSize="@dimen/dp_20"
            android:textColor="@color/color_white"
            android:layout_margin="@dimen/dp_10"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/img_head"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@mipmap/ic_head"
            android:layout_margin="@dimen/dp_30"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_70"/>

        <TextView
            android:id="@+id/tv_name"
            android:text="点击登录"
            android:textColor="@color/color_white"
            android:textSize="@dimen/dp_30"
            app:layout_constraintTop_toTopOf="@id/img_head"
            app:layout_constraintLeft_toRightOf="@id/img_head"
            app:layout_constraintBottom_toBottomOf="@id/img_head"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/img_into"
            android:src="@mipmap/ic_into"
            app:layout_constraintTop_toTopOf="@id/img_head"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/img_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <LinearLayout
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/layout_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="我的订单"
                android:id="@+id/tv_order"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingVertical="@dimen/dp_20"
                android:drawableTop="@mipmap/ic_my_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <View
                android:background="#A13E3E3E"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>
            <TextView
                android:text="我的收藏"
                android:id="@+id/tv_love"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingVertical="@dimen/dp_20"
                android:drawableTop="@mipmap/ic_my_love"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <View
                android:background="#A13E3E3E"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>
            <TextView
                android:text="地址管理"
                android:id="@+id/tv_location"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingVertical="@dimen/dp_20"
                android:drawableTop="@mipmap/ic_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <View
                android:background="#A13E3E3E"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>
            <TextView
                android:text="帮助中心"
                android:id="@+id/tv_help"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingVertical="@dimen/dp_20"
                android:drawableTop="@mipmap/ic_help"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <View
            android:background="#A13E3E3E"
            android:layout_width="@dimen/dp_2"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="优惠卷"
                android:id="@+id/tv_coupon"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingVertical="@dimen/dp_20"
                android:drawableTop="@mipmap/ic_my_coupon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <View
                android:background="#A13E3E3E"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>
            <TextView
                android:text="我的足迹"
                android:id="@+id/tv_tracks"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingVertical="@dimen/dp_20"
                android:drawableTop="@mipmap/ic_my_tracks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <View
                android:background="#A13E3E3E"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>
            <TextView
                android:text="会员福利"
                android:id="@+id/tv_vip"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingVertical="@dimen/dp_20"
                android:drawableTop="@mipmap/ic_vip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <View
                android:background="#A13E3E3E"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>
            <TextView
                android:text="账号安全"
                android:id="@+id/tv_securty"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingVertical="@dimen/dp_20"
                android:drawableTop="@mipmap/ic_securty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <View
            android:background="#A13E3E3E"
            android:layout_width="@dimen/dp_2"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@mipmap/ic_gift_card"
                android:gravity="center"
                android:paddingVertical="@dimen/dp_20"
                android:text="礼品卡" />
            <View
                android:background="#A13E3E3E"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>
            <TextView
                android:text="联系客服"
                android:id="@+id/tv_service"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingVertical="@dimen/dp_20"
                android:drawableTop="@mipmap/ic_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <View
                android:background="#A13E3E3E"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>
            <TextView
                android:text="意见反馈"
                android:id="@+id/tv_feedback"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingVertical="@dimen/dp_20"
                android:drawableTop="@mipmap/ic_feedback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <View
                android:background="#A13E3E3E"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>
            <TextView
                android:text=""
                android:layout_weight="1"
                android:gravity="center"
                android:paddingVertical="@dimen/dp_20"
                android:drawableTop="@mipmap/ic_empty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>